<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip">

        <CheckedTextView
            android:id="@+id/checkboxImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/studentProfileImage"
            android:layout_width="50dip"
            android:layout_height="50dip" />

        <TextView
            android:id="@+id/fullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/studentProfileImage"
            android:layout_toRightOf="@id/studentProfileImage"
            android:paddingLeft="5dip"
            android:paddingStart="5dip"
            android:text="Md Shakil Ahmed"
            android:textColor="#000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/activeId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fullName"
            android:layout_toEndOf="@id/studentProfileImage"
            android:layout_toRightOf="@id/studentProfileImage"
            android:paddingLeft="10dip"
            android:paddingStart="10dip"
            android:text="709755"
            android:textColor="#000"
            android:textSize="15sp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#dfdfdf" />

</LinearLayout>